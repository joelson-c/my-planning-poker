{
    "name": "planningpoker",
    "version": "1.0.0",
    "description": "A collaborative tool designed for agile development teams to streamline the estimation process.",
    "type": "module",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "lint:client": "bun run --filter @planningpoker/vote-client lint",
        "dev:client": "bun run --filter @planningpoker/vote-client dev",
        "build:client": "bun run --filter @planningpoker/vote-client build",
        "preview:client": "bun run --filter @planningpoker/vote-client preview",
        "prepare": "husky",
        "commit": "commit"
    },
    "author": "Joelson Carvalho",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@commitlint/config-lerna-scopes": "^19.5.0",
        "@commitlint/prompt-cli": "^19.5.0",
        "@faker-js/faker": "^9.0.3",
        "@types/bun": "latest",
        "husky": "^9.1.6",
        "typescript": "^5.6.2"
    }
}
