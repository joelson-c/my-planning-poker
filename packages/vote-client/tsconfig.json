{
    "extends": ["../../tsconfig.json"],
    "include": [
        "**/*",
        "**/.server/**/*",
        "**/.client/**/*",
        ".react-router/types/**/*"
    ],
    "compilerOptions": {
        "types": ["@react-router/node", "vite/client", "bun"],
        "baseUrl": ".",
        "rootDirs": [".", "./.react-router/types"],
        "paths": {
            "~/*": ["./app/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}
